{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Microservices deployment stage",
    "localized-struct":{
        "$ref": "deploy-localized-struct.json"
    },
    "description": "Microservices Stage Schema",
    "longDescription": "The Delivery Pipeline automates continuous deployment.",
    "type": "object",
    "properties": {
        "staging-region": {
            "description": "The bluemix region",
            "type": "string"
        },
        "staging-organization": {
            "description": "The bluemix org",
            "type": "string"
        },
       "staging-space": {
            "description": "The bluemix space",
            "type": "string"
        },
        "prod-region": {
            "description": "The bluemix region",
            "type": "string"
        },
        "prod-organization": {
            "description": "The bluemix org",
            "type": "string"
        },
       "prod-space": {
            "description": "The bluemix space",
            "type": "string"
        },
        "orders-app-name": {
            "description": "The name of the app for the Orders API",
            "type": "string"
        },
       "catalog-app-name": {
            "description": "The name of the app for the Catalog API",
            "type": "string"
        },
       "ui-app-name": {
            "description": "The name of the app for the UI that calls the Orders and Catalog APIs",
            "type": "string"
        }
    },
    "required": ["staging-region", "staging-organization", "staging-space", "prod-region", "prod-organization", "prod-space", "orders-app-name", "catalog-app-name", "ui-app-name"],
    "form": [
       {
          "type": "validator",
          "url": "/devops/setup/bm-helper/helper.html"
       },        
       {
          "type": "text",
          "readonly": false,
          "title": "Orders app name",
          "key": "orders-app-name"
        },
        {
          "type": "text",
          "readonly": false,
          "title": "Catalog app name",
          "key": "catalog-app-name"
        },
        {
          "type": "text",
          "readonly": false,
          "title": "UI app name",
          "key": "ui-app-name"
        },
        {
            "type": "table",
            "columnCount": 4,
            "widths": ["15%", "28%", "28%", "28%"],
            "items": [
                {
                  "type": "label",
                  "title": ""
                },
                {
                  "type": "label",
                  "title": "Region"
                },
                {
                  "type": "label",
                  "title": "Organization"
                },
                {
                  "type": "label",
                  "title": "Space"
                },
                {
                  "type": "label",
                  "title": "Test stage"
                },
                {
                  "type": "select",
                  "key": "staging-region"
                },
                {
                  "type": "select",
                  "key": "staging-organization"
                },
                {
                  "type": "select",
                  "key": "staging-space",
                  "readonly": false
                },
                {
                  "type": "label",
                  "title": "Production stage"
                },
                {
                  "type": "select",
                  "key": "prod-region"
                },
                {
                  "type": "select",
                  "key": "prod-organization"
                },
                {
                  "type": "select",
                  "key": "prod-space",
                  "readonly": false
                }
            ]
        }
    ]
}